# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"

order += "disk /"
order += "path_exists FILME" 
order += "path_exists VIRTUALBOXES"

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"

order += "battery all"
order += "tztime local"

general {
        colors = true
				color_bad = "#FB4943"
				color_good = "#B8BB26"
        color_degraded = "#FE8019"
        interval = 5
}

cpu_usage {
        format = " cpu: %usage "
				# format_above_threshold = " cpu %usage !! "
				max_threshold = "90"
}

cpu_temperature 0 {
				format=" temp: %degreesÂ°C "
				format_above_threshold=" %degrees Â°C ðŸŒ¶ "
				max_threshold="75"
}

memory {
				memory_used_method="classical"
        format = " ram: %used/%total (%percentage_used) " 
        format_degraded = " ram: %used of %total (%percentage_used) âš  " 
        threshold_degraded = "10%"
        threshold_critical = "5%"
}

disk "/" {
				# format = " hdd  %percentage_free of %total"
				format = " hdd: %free (%percentage_free)"

				# format = " ðŸ–´  %percentage_free of %total"
				# format = " ðŸ–´ %free (%percentage_free)"
				
				low_threshold="20"
				threshold_type="gbytes_free"
}

path_exists "FILME" {
				path="/run/media/carlos/FILME/" 
				format=" ðŸ“· "
				format_down=""	
}

path_exists "VIRTUALBOXES" {
				path="/run/media/carlos/VIRTUALBOXES/" 
				format=" ðŸ–¥  "
				format_down=""	
}

ipv6 {
				format_up=" ipv6: %ip "
				format_down=" no IPv6 "
}

wireless "_first_" {
				format_up = " wlan: %quality %bitrate %essid"
				format_down = " no wlan "
}

ethernet "_first_" {
				# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip %speed "
        format_down = " no lan "
}

battery "all" {
        format = " batt: %percentage %status (%consumption for %remaining) "
        format_down = " no battery "
        last_full_capacity = true
        integer_battery_capacity = true
        status_bat = "ï‰ƒ"
				status_chr = "âš¡"
        status_full = "ï‰€"
        status_unk = "?"
        low_threshold = 20
        threshold_type = "percentage"
}

tztime "local" {
        format = " dtime: %H:%M %d/%m/%y | "
        # format = "dtime: %Y-%m-%d %H:%M:%S"
				timezone = "Europe/Rome"
}
