        format = " cpu: %usage "
        format = " ï§„  %usage "
				# format_above_threshold = " cpu %usage !! "
				max_threshold = "90"
}

cpu_temperature 0 {
				format=" temp: %degrees Â°C "
				format=" ï‹ˆ  %degrees Â°C "
				format_above_threshold=" î¿  %degrees Â°C "
				max_threshold="75"
}

memory {
				memory_used_method="classical"
        format = " ram: %used/%total (%percentage_used) " 
        format = " î‰¦   %used/%total (%percentage_used) " 
        format_degraded = " ram: %used of %total (%percentage_used) ï±  " 
        format_degraded = " ï±  %used of %total (%percentage_used) " 
        threshold_degraded = "10%"
        threshold_critical = "5%"
}

