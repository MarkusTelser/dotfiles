# The file paliasrc (=personal-aliasrc) is an extension of the original config aliasrc.
# It groups personal user/machine-specific settings into a separate file,
# to provide a better plug and play experience after cloning this repo.
# The corresponding shell-configuration sources this file, like the original.


# personal path aliases
alias cdir="cd ~/Code"
alias ddir="cd ~/Documents"
alias sdir="cd ~/Documents/Lehrer/Schuljahr' '23-24"
alias bdir="cd ~/Downloads" # b = bullshit
alias pdir="cd ~/Code/Python"
alias fdir="cd /run/media/carlos/FILME/Filme"
alias f2dir="cd /run/media/carlos/FILME2/Filme"
alias vmdir="cd /run/media/carlos/VIRTUALBOXES/"
alias hdir="cd ~/Code/dotfiles"

# further aliases
alias todo="nvim ~/todo.md"
alias hdmi-school="xrandr --output HDMI-1 --scale 1.9x2 --same-as eDP-1 --auto"
alias hdmi-home="xrandr --output HDMI-1 --above eDP-1 --mode 2560x1440 --rate 60 --scale 1x1"
alias hdmi-off="xrandr --output HDMI-1 --off --auto"
alias hdmi-lpt-on="xrandr --output eDP-1 --auto"
alias hdmi-lpt-off="xrandr --output eDP-1 --off"

# bug-fix aliases
alias megasync="DO_NOT_UNSET_QT_QPA_PLATFORMTHEME=1 DO_NOT_SET_DESKTOP_SETTINGS_UNAWARE=1 megasync" # fix bug "Error unsetting QT_QPA_PLATFORMTHEME vble"
