
# A shell alias is a method of supplementing or overriding shell commands 
# with new ones. Shell aliases make it easy for users to customize their 
# experience in a POSIX terminal. The .aliasrc file is to group all your
# aliases into a separate file instead of putting it in the .bashrc or
# .zshrc file along with other parameters.

# colored aliases
alias ls='ls --color=auto'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'

# default aliases
alias cp="cp -i"
alias df='df -h'
alias more="less"
alias ll="ls -l"
alias la="ls -la"
alias free='free -h'

# abbreviation aliases 
alias sd="shutdown now"
alias re="sudo reboot now"
alias c="clear"
alias x="exit"
alias n="nvim"
alias v="vim"

# path aliases
alias cdir="cd ~/Code"
alias pdir="cd ~/Code/Python"
alias edir="cd ~/Code/ESP32"
alias mdir="cd /run/media/carlos/FILME/Filme"
alias vdir="cd /run/media/carlos/VIRTUALBOXES/"

# git aliases
alias gis="git status"
alias gia="git add "
alias giaa="git add ."
alias gic="git commit -m "
alias gip="git pull"
alias gipp="git push"

# utility aliases
alias fz="fzf --preview 'bat --style=numbers --color=always --line-range :500 {}'"
alias neofetch="neofetch --colors 10 10 10 10 --ascii_colors 10 10 10"
alias activate="source .venv/bin/activate"
